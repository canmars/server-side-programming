<%# 
    Ürün Detay Sayfası
    Controller: productController.show
    Route: GET /products/:id
%>

<h1>Ürün Detayı</h1>

<% if (product) { %>
    <div class="product-detail">
        <div class="detail-item">
            <strong>ID:</strong>
            <span><%= product.id %></span>
        </div>
        
        <div class="detail-item">
            <strong>Ürün Adı:</strong>
            <span><%= product.name %></span>
        </div>
        
        <div class="detail-item">
            <strong>Açıklama:</strong>
            <span><%= product.description || '-' %></span>
        </div>
        
        <div class="detail-item">
            <strong>Fiyat:</strong>
            <span><%= parseFloat(product.price).toFixed(2) %> ₺</span>
        </div>
        
        <div class="detail-item">
            <strong>Stok:</strong>
            <span><%= product.stock %></span>
        </div>
        
        <% if (product.user_id) { %>
            <div class="detail-item">
                <strong>Kullanıcı ID:</strong>
                <span><%= product.user_id %></span>
            </div>
        <% } %>
        
        <% if (product.created_at) { %>
            <div class="detail-item">
                <strong>Oluşturulma Tarihi:</strong>
                <span><%= new Date(product.created_at).toLocaleDateString('tr-TR') %></span>
            </div>
        <% } %>
    </div>

    <div class="actions">
        <a href="/products/<%= product.id %>/edit" class="btn btn-edit">Düzenle</a>
        <a href="/products" class="btn btn-back">Geri Dön</a>
        <form method="POST" action="/products/<%= product.id %>?_method=DELETE" style="display: inline;">
            <button type="submit" class="btn btn-delete" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?')">Sil</button>
        </form>
    </div>
<% } else { %>
    <div class="error-message">
        <p>Ürün bulunamadı.</p>
        <a href="/products" class="btn btn-back">Ürün Listesine Dön</a>
    </div>
<% } %>

