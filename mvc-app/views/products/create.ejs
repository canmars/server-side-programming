<%# 
    Yeni Ürün Oluşturma Formu
    Controller: productController.create (form gösterimi)
    Route: GET /products/create
%>

<h1>Yeni Ürün Ekle</h1>

<%# Hata Mesajları %>
<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <div class="error-messages">
        <h3>Lütfen aşağıdaki hataları düzeltin:</h3>
        <ul>
            <% errors.forEach(error => { %>
                <li><%= error %></li>
            <% }) %>
        </ul>
    </div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="error-message">
        <p><%= error %></p>
    </div>
<% } %>

<%# Ürün Oluşturma Formu %>
<form method="POST" action="/products" class="product-form">
    <div class="form-group">
        <label for="name">Ürün Adı *</label>
        <input 
            type="text" 
            id="name" 
            name="name" 
            value="<%= typeof name !== 'undefined' ? name : '' %>"
            required
            placeholder="Ürün adı"
        >
    </div>

    <div class="form-group">
        <label for="description">Açıklama</label>
        <textarea 
            id="description" 
            name="description" 
            rows="4"
            placeholder="Ürün açıklaması"
        ><%= typeof description !== 'undefined' ? description : '' %></textarea>
    </div>

    <div class="form-group">
        <label for="price">Fiyat *</label>
        <input 
            type="number" 
            id="price" 
            name="price" 
            value="<%= typeof price !== 'undefined' ? price : '' %>"
            required
            step="0.01"
            min="0"
            placeholder="0.00"
        >
        <small>Fiyat TL cinsinden (örn: 1500.00)</small>
    </div>

    <div class="form-group">
        <label for="stock">Stok Miktarı *</label>
        <input 
            type="number" 
            id="stock" 
            name="stock" 
            value="<%= typeof stock !== 'undefined' ? stock : '' %>"
            required
            min="0"
            placeholder="0"
        >
    </div>

    <div class="form-group">
        <label for="user_id">Kullanıcı ID *</label>
        <input 
            type="number" 
            id="user_id" 
            name="user_id" 
            value="<%= typeof user_id !== 'undefined' ? user_id : '' %>"
            required
            min="1"
            placeholder="1"
        >
        <small>Ürünü ekleyen kullanıcının ID'si</small>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Ürün Ekle</button>
        <a href="/products" class="btn btn-cancel">İptal</a>
    </div>
</form>

