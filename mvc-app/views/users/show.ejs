<%# 
    Kullanıcı Detay Sayfası
    Controller: userController.show
    Route: GET /users/:id
%>

<h1>Kullanıcı Detayı</h1>

<% if (user) { %>
    <div class="user-detail">
        <div class="detail-item">
            <strong>ID:</strong>
            <span><%= user.id %></span>
        </div>
        
        <div class="detail-item">
            <strong>İsim:</strong>
            <span><%= user.name %></span>
        </div>
        
        <div class="detail-item">
            <strong>Email:</strong>
            <span><%= user.email %></span>
        </div>
        
        <% if (user.created_at) { %>
            <div class="detail-item">
                <strong>Oluşturulma Tarihi:</strong>
                <span><%= new Date(user.created_at).toLocaleDateString('tr-TR') %></span>
            </div>
        <% } %>
    </div>

    <div class="actions">
        <a href="/users/<%= user.id %>/edit" class="btn btn-edit">Düzenle</a>
        <a href="/users" class="btn btn-back">Geri Dön</a>
        <form method="POST" action="/users/<%= user.id %>?_method=DELETE" style="display: inline;">
            <button type="submit" class="btn btn-delete" onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?')">Sil</button>
        </form>
    </div>
<% } else { %>
    <div class="error-message">
        <p>Kullanıcı bulunamadı.</p>
        <a href="/users" class="btn btn-back">Kullanıcı Listesine Dön</a>
    </div>
<% } %>

